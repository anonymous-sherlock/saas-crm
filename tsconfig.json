{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/prisma/*": ["./prisma/*"],
      "@/db/*": ["./src/db/*"],
      "@/server/*": ["./src/server/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/components/*": ["./src/components/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/lib/hooks/*"],
      "@/exceptions/*": ["./src/lib/exceptions/*"],
      "@/config/*": ["./config/*"],
      "@/schema/*": ["./schema/*"],
      "@/store/*": ["./store/*"],
      "@/providers/*": ["./providers/*"],
      "@/constants/*": ["./constants/*"],
      "@/public/*": ["./public/*"],
      "@/types/*": ["./src/types/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": ["store/next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".contentlayer/generated"],
  "exclude": ["node_modules"]
}
